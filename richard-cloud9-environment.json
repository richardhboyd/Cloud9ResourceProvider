{
    "typeName": "Richard::Cloud9::Environment",
    "description": "An example resource schema demonstrating some basic constructs and validation rules.",
    "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-rpdk.git",
    "definitions": {
        "InitechDateFormat": {
            "$comment": "Use the `definitions` block to provide shared resource property schemas",
            "type": "string",
            "format": "date-time"
        },
        "Memo": {
            "type": "object",
            "properties": {
                "Heading": {
                    "type": "string"
                },
                "Body": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "InstanceId": {
            "description": "EC2 Instance Id used by the underlying EC2 instance.",
            "type": "string",
            "pattern": "^i-[a-z0-9]{17}$"
        },
        "Name": {
            "description": "The name to give to the Cloud9 Environment.",
            "type": "string",
            "minLength": 3,
            "maxLength": 50
        },
        "InstanceType": {
            "description": "The EC2 instance type to use.",
            "type": "string",
            "pattern": "^[a-z][1-9][.][a-z0-9]+$"
        },
        "Description": {
            "description": "The description of the TPS report is an optional element.",
            "type": "string",
            "minLength": 20,
            "maxLength": 250
        },
        "EBSVolumeSize": {
            "description": "The size for the underlying EBS Volume.",
            "type": "integer",
            "minimum": 10,
            "maximum": 250
        },
        "UserData": {
            "description": "Bootstrapping script to send to the Instance",
            "type": "string"
        },
        "EnvironmentId": {
            "description": "Cloud9 Environment Id",
            "type": "string"
        },
        "OwnerArn": {
            "description": "Owner of the CLoud9 Environment. If not specified, it will be the root of the account.",
            "type": "string",
            "pattern": "^arn:aws:(iam|sts)::\\d+:(root|(user\\/[\\w+=/:,.@-]{1,64}|federated-user\\/[\\w+=/:,.@-]{2,32}|assumed-role\\/[\\w+=:,.@-]{1,64}\\/[\\w+=,.@-]{1,64}))$"
        },
        "SSHKeyLocation": {
            "description": "ARN for the AWS Secrets Manager Secret that contains your SSH Key",
            "type": "string",
            "pattern": "^arn:(aws[a-zA-Z-]*)?:secretsmanager:[a-z]{2}((-gov)|(-iso(b?)))?-[a-z]+-\\d{1}:\\d{12}:secret:[\\/\\w+=:,.@-]{1,64}$"
        }
    },
    "additionalProperties": false,
    "required": [
        "InstanceType"
    ],
    "readOnlyProperties": [
        "/properties/InstanceId",
        "/properties/EnvironmentId"
    ],
    "primaryIdentifier": [
        "/properties/InstanceId"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "cloud9:CreateEnvironmentEC2",
                "ec2:DescribeInstances",
                "ec2:ModifyVolume",
                "ec2:ModifyInstanceAttribute",
                "ec2:StartInstances"
            ]
        },
        "read": {
            "permissions": [
                "*"
            ]
        },
        "update": {
            "permissions": [
                "*"
            ]
        },
        "delete": {
            "permissions": [
                "*"
            ]
        },
        "list": {
            "permissions": [
                "*"
            ]
        }
    }
}
